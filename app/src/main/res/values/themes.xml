<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.HelpingHands" parent="android:Theme.Material.Light.NoActionBar" >
        <item name="android:windowIsTranslucent">true</item>

    </style>


    <style name="Theme.MyApp.Splash" parent="Theme.HelpingHands">
        <!-- Background color for the splash screen -->
        <item name="windowSplashScreenBackground">@drawable/gradient_background</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>


        <!-- Post-splash theme applied to the app -->
        <item name="postSplashScreenTheme">@style/Theme.HelpingHands</item>
    </style>


</resources>